<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:textColor="#0f9"
                android:textSize="40sp"
                android:text="道路环保"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="专项治理道路环境"
                    android:padding="15dp"
                    android:textSize="30sp"
                    android:id="@+id/btn_creative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textSize="32sp"
                        android:text="开通绿色环保通道"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:text="上学放学期间自动开启 小区-学校 绿色环保通道"
                       />
                    <Switch
                        android:id="@+id/sw_green"
                        android:textOff="关闭"
                        android:textOn="开启"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="40dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="3px"/>


            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:textColor="#0ff"
                android:textSize="40sp"
                android:text="道路信息实时反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv1"
                    android:textColor="#f00"
                    android:textSize="35sp"
                    android:text="一号道路发生交通拥堵"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:textSize="32sp"
                        android:text="自动通知该道路驾驶人员"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:id="@+id/sw"
                        android:textOff="手动"
                        android:textOn="自动"
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
